// tsconfig.node.app
{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* Language */
    "target": "ES2023",
    "lib": ["ES2023"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],

    /* Output */
    "noEmit": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,

    // "strict": true,
    "noImplicitAny": true, // <-- catch implicit any (your `item`)
    "noImplicitThis": true, // safer "this"
    "noImplicitReturns": true, // all branches must return
    "strictNullChecks": true, // null/undefined handled explicitly
    "alwaysStrict": true, // always strict mode

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true
  },

  "include": ["vite.config.ts"]
}
