// tsconfig.app.json
{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client"],

    /* Paths / Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Output / Emission */
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,

    "noImplicitAny": true, // <-- catch implicit any (your `item`)
    "noImplicitThis": true, // safer "this"
    "noImplicitReturns": true, // all branches must return
    "strictNullChecks": true, // null/undefined handled explicitly
    "alwaysStrict": true, // always strict mode

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Vue SFCs */
    "jsx": "preserve",
    "verbatimModuleSyntax": true
  },

  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],

  "exclude": ["node_modules", "dist"]
}
