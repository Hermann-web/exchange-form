# Strategy Configuration
# Options: "mockup", "supabase", "firebase", "fastapi" (for auth/db), "fastapi" (for storage)
VITE_AUTH_STRATEGY=fastapi
VITE_DATABASE_STRATEGY=fastapi
VITE_FILE_STORAGE_STRATEGY=fastapi

# API URLs
# Used by 'fastapi' strategy for Auth and Database
VITE_CUSTOM_DB_BASE_URL=http://localhost:8000
# Used by 'fastapi' strategy for File Storage
VITE_CUSTOM_CDN_BASE_URL=http://localhost:8000

# Admin Configuration
# Comma-separated list of emails that have admin access
VITE_ADMIN_EMAILS=admin@example.com,dev@example.com

# Allowed email domain for authentication
# Options: "centrale-casablanca.ma" or "gmail.com" or any other valid domain
VITE_ALLOWED_EMAIL_DOMAIN=centrale-casablanca.ma

# Mockup Configuration
# Set to 'true' to simulate submission status in mockup mode
VITE_MOCKUP_SUBMISSION_STATUS=true

# Supabase configuration (if using supabase strategy)
VITE_SUPABASE_URL=https://your-supabase-url.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Firebase configuration (if using firebase strategy)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
